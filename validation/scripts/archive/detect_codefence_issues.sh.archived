#!/bin/bash

# Codefence Issues Detection Script
# Usage: ./detect_codefence_issues.sh [target_directory]
# Uses markdownlint MD040 rule to detect missing language tags on code fences

set -e

TARGET_ROOT="${1:-docs}"
TIMESTAMP=$(date +%Y%m%d_%H%M%S)
REPORT_DIR="validation/reports"
REPORT_FILE="$REPORT_DIR/codefence_issues_${TIMESTAMP}.json"
INSTANCES_DIR="$REPORT_DIR/instances"

mkdir -p "$REPORT_DIR" "$INSTANCES_DIR"

total_issues=0

# Color codes
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
NC='\033[0m'

echo "━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━"
echo "CODEFENCE VALIDATION (via markdownlint MD040)"
echo "━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━"
echo "Target: $TARGET_ROOT"
echo "Report: $REPORT_FILE"
echo ""

# Run markdownlint and capture MD040 violations
MARKDOWNLINT_OUT=$(mktemp)
docker run --rm -v $PWD:/md -w /md peterdavehello/markdownlint:latest \
  markdownlint "$TARGET_ROOT/" --config .markdownlint.json 2>&1 | grep "MD040" > "$MARKDOWNLINT_OUT" || true

# Count issues
count_missing=$(wc -l < "$MARKDOWNLINT_OUT")
total_issues=$count_missing

# Initialize JSON report
echo "{" > "$REPORT_FILE"
echo "  \"timestamp\": \"$(date -Iseconds)\"," >> "$REPORT_FILE"
echo "  \"target_root\": \"$TARGET_ROOT\"," >> "$REPORT_FILE"
echo "  \"detection_method\": \"markdownlint MD040\"," >> "$REPORT_FILE"
echo "  \"issues\": {" >> "$REPORT_FILE"
echo "    \"missing_language_tag\": {" >> "$REPORT_FILE"
echo "      \"description\": \"Fenced code blocks should have a language specified (MD040)\"," >> "$REPORT_FILE"
echo "      \"count\": $count_missing," >> "$REPORT_FILE"
echo "      \"files\": [" >> "$REPORT_FILE"

if [ "$count_missing" -gt 0 ]; then
    echo "Checking: Fenced code blocks missing language tag (MD040)..."
    first=true
    while IFS= read -r line; do
        [ -z "$line" ] && continue
        # Parse markdownlint output: file:line MD040/fenced-code-language ...
        file=$(echo "$line" | cut -d: -f1)
        linenum=$(echo "$line" | cut -d: -f2 | cut -d' ' -f1)
        
        if [ "$first" = true ]; then
            first=false
        else
            echo "," >> "$REPORT_FILE"
        fi
        echo -n "        {\"file\": \"$file\", \"line\": \"$linenum\"}" >> "$REPORT_FILE"
        echo -e "  ${RED}✗${NC} $file:$linenum"
    done < "$MARKDOWNLINT_OUT"
    echo "" >> "$REPORT_FILE"
else
    echo -e "Checking: Fenced code blocks missing language tag... ${GREEN}✓${NC} None found"
fi

echo "      ]" >> "$REPORT_FILE"
echo "    }" >> "$REPORT_FILE"
echo "  }," >> "$REPORT_FILE"
echo "  \"total_issues\": $total_issues" >> "$REPORT_FILE"
echo "}" >> "$REPORT_FILE"

rm "$MARKDOWNLINT_OUT"

echo ""
echo "━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━"
echo "SUMMARY"
echo "━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━"

if [ $total_issues -eq 0 ]; then
    echo -e "${GREEN}✓${NC} All codefence checks passed!"
    exit 0
else
    echo -e "${RED}✗${NC} Found $total_issues codefence violations"
    echo "Report saved to: $REPORT_FILE"
    exit 1
fi
